{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": [
      "es2017",
      "esnext.asynciterable",
      "dom"
    ],
    "jsx": "preserve",
    "skipLibCheck": true,
    "types": ["react", "react-dom"],
    "sourceMap": true,
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./lib/**/*.ts",
    "./components/**/*.ts",
    "./components/**/*.tsx",
    "./app/**/*.ts",
    "./app/**/*.tsx",
    ".next/types/**/*.ts"
  ]
}
